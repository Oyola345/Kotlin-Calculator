<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgCalculator"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvResults"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_weight="5"
        android:background="@drawable/rounded_corner"
        android:gravity="bottom|end"
        android:padding="20dp"
        android:text="0"
        android:textColor="@color/white"
        android:textSize="70sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:orientation="vertical"
        android:weightSum="5">

        <LinearLayout
            android:id="@+id/firstLineBtns"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="10dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:weightSum="4"
            android:layout_weight="1">

            <Button
                android:id="@+id/btnC"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                android:backgroundTint="@color/keys"
                android:text="C"
                android:textSize="30sp"
                android:textStyle="bold"
                app:cornerRadius="5dp" />

            <Button
                android:id="@+id/btnPercentage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                android:backgroundTint="@color/keys"
                android:text="%"
                android:textSize="30sp"
                android:textStyle="bold"
                app:cornerRadius="5dp" />

            <Button
                android:id="@+id/btnSplit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                android:backgroundTint="@color/keys"
                android:text="/"
                android:textSize="30sp"
                android:textStyle="bold"
                app:cornerRadius="5dp" />

            <ImageButton
                android:id="@+id/btnDelete"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                android:backgroundTint="@color/keys"
                app:cornerRadius="5dp"
                android:src="@drawable/delete_icon" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/secondLineBtns"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="10dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:weightSum="4"
            android:layout_weight="1">

            <Button
                android:id="@+id/btn7"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                android:backgroundTint="@color/keys"
                android:text="7"
                android:textSize="20sp"
                android:textStyle="bold"
                app:cornerRadius="5dp" />

            <Button
                android:id="@+id/btn8"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                android:backgroundTint="@color/keys"
                android:text="8"
                android:textSize="20sp"
                android:textStyle="bold"
                app:cornerRadius="5dp" />

            <Button
                android:id="@+id/btn9"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                android:backgroundTint="@color/keys"
                android:text="9"
                android:textSize="20sp"
                android:textStyle="bold"
                app:cornerRadius="5dp" />

            <ImageButton
                android:id="@+id/btnMultiply"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                android:backgroundTint="@color/keys"
                app:cornerRadius="5dp"
                android:src="@drawable/multiply_icon" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/thirdLineBtns"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="10dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:weightSum="4"
            android:layout_weight="1">

            <Button
                android:id="@+id/btn4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                android:backgroundTint="@color/keys"
                android:text="4"
                android:textSize="20sp"
                android:textStyle="bold"
                app:cornerRadius="5dp" />

            <Button
                android:id="@+id/btn5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                android:backgroundTint="@color/keys"
                android:text="5"
                android:textSize="20sp"
                android:textStyle="bold"
                app:cornerRadius="5dp" />

            <Button
                android:id="@+id/btn6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                android:backgroundTint="@color/keys"
                android:text="6"
                android:textSize="20sp"
                android:textStyle="bold"
                app:cornerRadius="5dp" />

            <ImageButton
                android:id="@+id/btnSum"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                android:backgroundTint="@color/keys"
                android:gravity="center"
                app:cornerRadius="5dp"
                android:src="@drawable/plus_icon" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/fourthLineBtns"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="10dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:weightSum="4"
            android:layout_weight="1">

            <Button
                android:id="@+id/btn1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                android:backgroundTint="@color/keys"
                android:text="1"
                android:textSize="20sp"
                android:textStyle="bold"
                app:cornerRadius="5dp" />

            <Button
                android:id="@+id/btn2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                android:backgroundTint="@color/keys"
                android:text="2"
                android:textSize="20sp"
                android:textStyle="bold"
                app:cornerRadius="5dp" />

            <Button
                android:id="@+id/btn3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                android:backgroundTint="@color/keys"
                android:text="3"
                android:textSize="20sp"
                android:textStyle="bold"
                app:cornerRadius="5dp" />

            <Button
                android:id="@+id/btnMinus"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                android:backgroundTint="@color/keys"
                android:text="-"
                android:textSize="40sp"
                android:textStyle="bold"
                app:cornerRadius="5dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/fifthLineBtns"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="10dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:weightSum="4">

            <Button
                android:id="@+id/btn0"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:backgroundTint="@color/keys"
                android:layout_weight="1"
                android:text="0"
                android:textSize="20sp"
                android:textStyle="bold"
                app:cornerRadius="5dp" />

            <Button
                android:id="@+id/btnComma"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:backgroundTint="@color/keys"
                android:layout_weight="1"
                android:text=","
                android:textSize="25sp"
                android:textStyle="bold"
                app:cornerRadius="5dp" />

            <Button
                android:id="@+id/btnEqual"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_weight="2"
                android:backgroundTint="@color/keys"
                android:text="="
                android:textSize="40sp"
                android:textStyle="bold"
                app:cornerRadius="5dp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
